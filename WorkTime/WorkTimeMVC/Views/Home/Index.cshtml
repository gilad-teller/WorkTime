@using WorkTimeLogic.Models
@model HomeModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Work Time</h1>
        <p class="lead">App to monitor your work time.</p>
        <hr class="my-4" />
        @if (Model.Jobs.Any())
        {
            <div class="list-group">
                @foreach (JobDto j in Model.Jobs)
                {
                    <a class="list-group-item list-group-item-action" asp-controller="Job" asp-action="Index" asp-route-jobId="@j.JobId">@j.Name</a>
                }
            </div>
            <hr class="my-4" />
        }
        <a role="button" class="btn btn-primary" asp-controller="Job" asp-action="Index">Add Job</a>
        <hr class="my-4" />
        @if (Model.Reports.Any())
        {
            <div class="list-group">
                @foreach (ReportDto r in Model.Reports)
                {
                <a class="list-group-item list-group-item-action" asp-controller="Report" asp-action="Index" asp-route-reportId="@r.ReportId">@r.ToString()</a>
                }
            </div>
            <hr class="my-4" />
        }
        <a role="button" class="btn btn-primary" asp-controller="Report" asp-action="Index">Add Report</a>
    </div>
</div>